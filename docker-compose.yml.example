version: '3.8'

services:
  rent2repay-demo:
    image: node:20-alpine
    container_name: rent2repay-demo
    working_dir: /app
    volumes:
      - .:/app
      - /app/node_modules
    ports:
      - "5002:3000"  # External port 5002 maps to internal port 3000
    environment:
      - NODE_ENV=production
      - NEXT_PUBLIC_RPC_URL=${NEXT_PUBLIC_RPC_URL}
      - NEXT_PUBLIC_R2R_PROXY=${NEXT_PUBLIC_R2R_PROXY}
      - NEXT_PUBLIC_CHAIN_ID=${NEXT_PUBLIC_CHAIN_ID}
    command: >
      sh -c "
        apk add --no-cache curl &&
        npm install &&
        npm run build &&
        npm start
      "
    restart: unless-stopped
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:3000"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 60s

